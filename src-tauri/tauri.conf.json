{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "hoof",
    "version": "0.0.4"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "all": true,
      "http": {
        "scope": ["http://localhost:11434/*"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": []
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.hoof.app",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "icon": [
        "icons/310x310.png",
        "icons/128x128.png",
        "icons/logo.png",
        "icons/logo.icns",
        "icons/logo.ico"
      ]
    },

    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "hoof",
        "width": 1024,
        "height": 650,
        "decorations": false,
        "center": true,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/logo-tray.png",
      "title": "hoof",
      "iconAsTemplate": false
    }
  }
}
